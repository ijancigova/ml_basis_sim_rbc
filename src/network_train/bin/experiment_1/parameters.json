{
  "experiment_log_prefix"    : "experiment_1/",

  "batch_max_size"            : 10000,
  "use_pretrained"            : false,

  "epoch_without_improvement" : 2,
  "init_networks_try_count"   : 5,
  "epoch_count"               : 10,

  "learning_rate_decay"      : 0.5,

  "network_architecture"     :
  {
    "input_geometry"     : [3, 16, 50],
    "output_geometry"    : [1, 1, 3],

    "hyperparameters" :
    {
      "init_weight_range" : 0.01,
      "learning_rate"     : 0.002,
      "lambda"            : 0.000001,
      "dropout"           : 0.05
    },

    "layers"         :
    [
      {
        "type"      : "convolution",
        "geometry"  : [3, 3, 32]
      },


      {
        "type"      : "relu"
      },

      {
        "type"      : "fc",
        "geometry"  : [1, 1, 64]
      },

      {
        "type"      : "relu"
      },

      {
        "type"      : "dropout"
      },

      {
        "type"      : "output"
      }
    ]
  }
}
